<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" 
spacing="10.0" fx:controller="Controllers.MenuControllerView" 
stylesheets="styles.css">
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Format:" />
        <ComboBox>
            <items>
                <ComboBox>
    				<items>
        			<Text text="Gen 9" />
        			<Text text="OU" />
    				</items>
				</ComboBox>

            </items>
        </ComboBox>
        <CheckBox text="Validate" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <VBox.Margin>
            <Insets top="5" right="0" bottom="5" left="0" />
        </VBox.Margin>
        <ImageView>
            <image>
                <Image url="@path/to/alomomola_image.png" />
            </image>
        </ImageView>
        <VBox alignment="CENTER_LEFT" spacing="5.0">
            <Label text="Nickname:" />
            <TextField promptText="Alomomola" />

            <Label text="Details" />
            <GridPane hgap="10" vgap="5">
                <Label text="Level:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField text="100" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <ComboBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <items>
                        <ComboBox>
   						 <items>
        					<Text text="Gen 9" />
        					<Text text="OU" />
    						</items>
						</ComboBox>

                    </items>
                </ComboBox>
                <Label text="Shiny:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <CheckBox GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Tera Type:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField promptText="Water" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </GridPane>

            <Label text="Moves" />
            <GridPane hgap="10" vgap="5">
                <TextField promptText="HP Recover" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField promptText="Defog" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <TextField promptText="SpA boost" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField promptText="SpA boost" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </GridPane>

            <Label text="Stats" />
            <GridPane hgap="10" vgap="5">
                <TextField promptText="HP" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField promptText="Atk" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <TextField promptText="Def" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <TextField promptText="SpA" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                <TextField promptText="SpD" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                <TextField promptText="Spe" GridPane.columnIndex="5" GridPane.rowIndex="0" />
            </GridPane>

            <Label text="EV" />
            <GridPane hgap="10" vgap="5">
                <TextField promptText="252" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField promptText="252" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <TextField promptText="4" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            </GridPane>
        </VBox>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Item:" />
        <TextField promptText="Air Balloon" />
        <Label text="Ability:" />
        <TextField promptText="Healer" />
    </HBox>

